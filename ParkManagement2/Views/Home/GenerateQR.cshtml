
@{
    ViewBag.Title = "GenerateQR";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>

<style>
    #qrimg img {
        width: 140px !important;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("QR Text : ")
                @Html.TextBox("qr", null, new { @class = "form-control", id = "qr", placeholder = "Enter QR Text" })
            </div>
            <div class="row">
                <div class="form-group">
                    <button onclick="GenerateQR()" class="btn btn-primary">Generate</button>
                    <button onclick="PrintQR()" class="btn btn-primary">Print</button>
                </div>
            </div>
        </div>
        <div class="col-md-2" id="qrimg">


        </div>
    </div>

</div>

<script>
    function GenerateQR() {
        $("#qrimg").load("/Home/ViewQR?qr=" + $("#qr").val())
    }
    function PrintQR() {
        var printContents = document.getElementById('qrimg').innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>

