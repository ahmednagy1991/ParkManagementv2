@model ParkManagement2.Models.SmsModel
@{
    ViewBag.Title = "AddNew";
}




<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @using (Html.BeginForm("save", "SmsTemplate", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.template.id)
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(m => m.template.template_name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Template</label>
            @Html.TextAreaFor(m => m.template.tamplate_body, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
}
        </div>
        <div class="col-md-3"></div>
    </div>
</div>